<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iglyphic.tictactoe">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.iglyphic.tictactoe.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        <activity android:name="TossActivity" android:screenOrientation="portrait"></activity>
        <activity android:name="PlayActivity" android:screenOrientation="portrait"></activity>
        <activity android:name="ScoreActivity" android:screenOrientation="portrait"></activity>
        <activity android:name="GameActivity" android:screenOrientation="portrait"></activity>
        <activity android:name="BluetoothConnectActivity" android:screenOrientation="portrait"></activity>
        <activity android:name="TossBluetoothActivity" android:screenOrientation="portrait"></activity>
        <activity android:name="GameBluetoothActivity" android:screenOrientation="portrait"></activity>


        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent"/>
        
        
    </application>

</manifest>
